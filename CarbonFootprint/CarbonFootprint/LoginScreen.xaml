<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarbonFootprint.LoginScreen">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Hello and welcome to carbon footprint"/>
            <Entry x:Name="Username" Placeholder="Enter username"/>
            <Entry x:Name="Password" Placeholder="Enter password" IsPassword="True"/>
            <Button x:Name="Login" Text="Login" Clicked="LoginClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>